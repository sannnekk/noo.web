{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**.json",
    "components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2021", "dom", "dom.iterable", "scripthost"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}
